<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Animals.DetailsPage"
             Title="DetailsPage">
    <VerticalStackLayout>
        <StackLayout Padding="10">
            <Image x:Name="AnimalImage" Aspect="AspectFill" WidthRequest="300" HeightRequest="300"/>
            <Label x:Name="SpeciesLabel" FontSize="Large" HorizontalOptions="Center"/>
            <Label x:Name="DescriptionLabel" FontSize="Medium" Padding="10"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>